 
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="container">

<header>
    <%- include('../partials/header3') %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h1>AttenBuddy</h1>
            <p>Welcome to one of the best Attendance Management System</p>
        </div>
    </div>

    <div class="col-sm-4">        
        <div class="well">
            <h3>Teacher</h3>
            <p>You can take your attendance of all the courses you are teaching.</p>
        </div>
    </div>
</div>
<% var k=0 %>
<% for (var i =0; i < (course.length/4)+1;  i++ ) { %>
    <div class="row">
    <% for (var j =0; j <4;  j++ ) { %>
      <% if(k<course.length) { %>
        <div class="col-sm-3">
    <div class="card-body">
    <div class="card bg-dark text-white">
    <h4 class="card-title" style="text-align:center"><em><b><%= course[k].name %></b></em></h4>
    <center><form action = "/takeAttendanceSheet" method = "POST"><div class="form-group">
    <input required type="date" name="date">
    <br><br>
    <input required type="text" name="batch" placeholder="batch" class="form-control col-sm-7 form-control-sm">
    <br>
    <input type="hidden" name="teacher" value= <%= course[k].teacher %> >
    <input type="hidden" name="course" value= <%= course[k].name %> >
    <input type="submit" value="Take" class="btn btn-danger btn-sm btn-block">
    </div></form></center>
    </div>
    </div>
    </div>
    <% k++} %>
    <% } %>
    </div>
<% } %>
</main>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>
 
 
