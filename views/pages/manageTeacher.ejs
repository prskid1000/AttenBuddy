 
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="container-fluid">

<header>
    <%- include('../partials/header4') %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h2>AttenBuddy</h2>
            <p>Welcome to one of the best Attendance Management System</p>
        </div>
    </div>

    <div class="col-sm-4">        
        <div class="well">
            <form action = "/addTeacher" method = "POST">
                <br><br>
					<div class="input-group form-group col-10">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-affiliatetheme"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="userid" name="userid">	
					</div>
					<div class="input-group form-group col-10">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-affiliatetheme"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="password" name="password">
					</div>
					<div class="form-group col-10">
						<input type="submit" value="Create" class="btn float-right grey darken-4">
					</div>
				</form>
        </div>
    </div>
</div>
<% var k=0 %>
<% for (var i =0; i < (teacher.length/4)+1;  i++ ) { %>
    <div class="row">
    <% for (var j =0; j <4;  j++ ) { %>
      <% if(k<teacher.length) { %>
        <div class="col-sm-3">
    <div class="card-body">
    <div class="card grey darken-4 text-white">
        <div class="card-title" style="text-align:center">
            <h4><b>
                    <%= teacher[k].userid %>
                </b></h4>
        </div>
    <div>
        <center>
            <p class="card-text">
            <h5>Password:</h5>
            <h6>
                <%= teacher[k].password %>
            </h6>
            </p>
        </center>
    </div>
    <center>
        <form action="/deleteTeacher" method="POST">
            <div class="form-group">
                <div>
                    <input type="hidden" name="userid" value=<%=teacher[k].userid %> >
                    <input type="hidden" name="password" value=<%=teacher[k].password %> >
                </div>
            </div>
            <input type="submit" value="Delete" class="btn btn-danger btn-sm btn-block teal darken-4">
        </form>
    </center>
    </div>
    </div>
    </div>
    <% k++} %>
    <% } %>
    </div>
<% } %>
</main>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>
