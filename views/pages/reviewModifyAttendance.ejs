 
 
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="container-fluid">

<header>
    <%- include('../partials/header3') %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h2>AttenBuddy</h2>
            <p>Welcome to one of the best Attendance Management System</p>
        </div>
    </div>

    <div class="col-sm-4">        
        <div class="well">
            <h3>Teacher</h3>
            <p>You can take your attendance of all the courses you are teaching.</p>
        </div>
    </div>
</div>

<% var k=0 %>
    <% for (var i=0; i < (course.length/4)+1; i++ ) { %>
        <div class="row">
            <% for (var j=0; j <4; j++ ) { %>
                <% if(k<course.length) { %>
                    <div class="col-sm-3">
                        <div class="card-body">
                            <div class="card grey darken-4 text-white">

                                <div class="card-title" style="text-align:center">
                                    <h4><b>
                                            <%= course[k].name %>
                                        </b></h4>
                                </div>

                                <center>
                                    <form action="/reviewModifyAttendanceSheet" method="POST">
                                        <div class="form-group col-10">
                                            <div>
                                                <input class="text-white" required type="date" name="date">
                                            </div>
                                            <input type="hidden" name="teacher" value=<%=course[k].teacher %> >
                                            <input type="hidden" name="course" value=<%=course[k].name %> >
                                            <input required type="text" name="batch" placeholder="Batch"
                                                class="form-control text-white form-control-sm">
                                        </div>
                                        <input type="submit" value="Take"
                                            class="btn btn-danger btn-sm btn-block teal darken-4">
                                    </form>
                                </center>
                            </div>
                        </div>
                    </div>
                    <% k++} %>
                        <% } %>
        </div>
        <% } %>
</main>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>
 
 
