<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="container-fluid">

<header>
    <%- include('../partials/header3') %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h2>AttenBuddy</h2>
            <p>Welcome to one of the best Attendance Management System</p>
        </div>
    </div>

    <div class="col-sm-4">        
        <div class="well">
            <h3>Teacher</h3>
            <p>You can take your attendance of all the courses you are teaching.</p>
        </div>
    </div>
</div>
<form action = "/modify" method = "POST">
<% var k=0 %>
<% for (var i =0; i < (present.length/4)+1;  i++ ) { %>
    <div class="row">
    <% for (var j =0; j <4;  j++ ) { %>
      <% if(k<present.length) { %>
        <div class="col-sm-3">
    <div class="card-body">
    <div class="card grey darken-4 text-white">
        <div class="card-title" style="text-align:center">
            <h4><b>
                    <%= present[k] %>
                </b></h4>
        </div>
    <center><div class="form-group">
    <input type="checkbox" checked data-toggle="toggle" data-size="small" data-onstyle="info" data-offstyle="info" data-on="Present" data-off="Absent" name=<%= present[k] %> >
    <br>
    </div></center>
    </div>
    </div>
    </div>
    <% k++} %>
    <% } %>
    </div>
<% } %>
<% k=0 %>
<% for (var i =0; i < (absent.length/4)+1;  i++ ) { %>
    <div class="row">
    <% for (var j =0; j <4;  j++ ) { %>
      <% if(k<absent.length) { %>
        <div class="col-sm-3">
    <div class="card-body">
    <div class="card grey darken-4 text-white">
        <div class="card-title" style="text-align:center">
            <h4><b>
                    <%= absent[k] %>
                </b></h4>
        </div>
    
    <center><div class="form-group">
    <input class="absent" type="checkbox" data-toggle="toggle" data-size="small" data-onstyle="info" data-offstyle="info" data-on="Present" data-off="Absent" name=<%= absent[k] %> >
    <br>
    </div></center>
    </div>
    </div>
    </div>
    <% k++} %>
    <% } %>
    </div>
<% } %>
<script>
    var toggle = document.getElementByClassName('absent'); 
</script>
<div class="row">
 <div class="col-sm-12">
<div class="form-group">
<input type="submit" value="Submit" class="btn btn-lg btn-block teal darken-4">
</div>
</div>
</div>
<input type="hidden" name="course" value= <%= course %> >
<input type="hidden" name="teacher" value= <%= teacher %> >
<input type="hidden" name="date" value= <%= date %> >
<input type="hidden" name="batch" value= <%= batch %> >
</form>
</main>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>
 
 
 
